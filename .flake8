[flake8]
max-line-length = 128
# Error codes to ignore:
# E203 - whitespace before ':' (conflicts with black)
# W503 - line break before binary operator (deprecated)
# E501 - line too long (handled by black)
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    htmlcov,
    *.egg-info,
    dist,
    build,
    tests,
    scripts,
    data,
    docs,
    evaluation_results,
    examples

